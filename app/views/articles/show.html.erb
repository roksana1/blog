<%= render partial: 'articles/menu' %>

<div class="blog">
  <div class="container">
    
    <div class="panel panel-default widoczek">
      
      <div class="articleheader">
        <b><p class="articletitle"><%= @article.title %></p></b>
        <% if logged_in? %>
            <%= link_to "usuń", article_path(@article), method: :delete, data: {confirm: "Czy na pewno chcesz usunąć wpis?"} %> <%= link_to "edytuj", edit_article_path(@article) %></br>
        <% end %>
        <p>
          Tagi:
          <% @article.tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag) %>
          <% end %>
        </p>
      </div>
      
      <div class="zdjecieart">
        <p><%= image_tag @article.image.url %></p>
      </div>
      <div class="artcontent">
        <p><%= @article.body %></p>
      </div>
    </div>
    
    
  <div class="panel panel-default widoczek">
    <div class="commentart">
        <h2>Komentarze (<%= @article.comments.size %>)</h2>
        <row>
            <%= render partial: 'articles/comment', collection: @article.comments.reverse %></br>
        <h4>Podziel się swoją opinią:</h4>
            <%= render partial: 'comments/form' %>
        </row>
    </div>
    <div class="panel-footer">
            <a><%= link_to 'Wróć', articles_path %></a>
    </div>
  </div>
  
</div>
</div>